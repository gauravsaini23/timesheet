<div>

 <table>
   <% form_for :change,@emp, :url => {:action => "change_password" } do |f| %>
   <tr>
    <td><label for=”change_password”>New Password:</label></td>
    <td><%= f.password_field "password" %></td>
   </tr>
   <tr>
     <td><label for=”change_password_confirmation”>Confirm Password:</label></td>
     <td><%= f.password_field "password_confirmation" %></td>
   </tr>      
   <tr>
     <td><%= f.submit "Change Password" %></td>
   </tr>
   <%end%>
 </table>
 </div>
